@model IEnumerable<StudentStaffApp.Models.StaffDetail>

@{
    ViewBag.Title = "StaffDetails";
}

<h2>StaffDetails</h2>

@using (Html.BeginForm())
{
    <hr />
    <div class="row">
        <div class="col-md-3">
            <label>StaffId</label>
            <input type="number" name="staffid" />
        </div>
        <div class="col-md-3">
            <label></label>
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
    <hr />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subject)
            </th>
            <th></th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Experience)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.subject)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { staffid = item.StaffId }) |
                        @Html.ActionLink("Delete", "Delete", new { staffid = item.StaffId })
                    </td>
                </tr>
            }
        }
    </table>
}