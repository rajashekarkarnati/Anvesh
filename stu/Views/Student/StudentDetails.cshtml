@model IEnumerable<StudentStaffApp.Models.StudentDetail>

@{
    ViewBag.Title = "StudentDetails";
}

<h2>Student Details</h2>

@using (Html.BeginForm())
{
    <hr />
    <div class="row">
        <div class="col-md-3">
            <label>StudentId</label>
            <input type="number" name="studentid" />
        </div>
        <div class="col-md-3">
            <label></label>
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
    <hr />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateofBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addrees)
            </th>
            <th></th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Branch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Convert.ToDateTime(item.DateofBirth).ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addrees)
        </td>
        <td>
            @Html.ActionLink("Edit", "GetStudentById", new { studentid = item.StudentId }) |
            @Html.ActionLink("Delete", "DeleteStudentById", new { studentid = item.StudentId })
        </td>
    </tr>
            }
        }
    </table>
}